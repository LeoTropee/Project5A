<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Search"
    tools:showIn="@layout/activity_search"
    android:theme="@android:style/Theme.Black.NoTitleBar">


    <AutoCompleteTextView
        android:id="@+id/nameSearch"
        android:layout_width="269dp"
        android:layout_height="43dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/IACOSearch"
        android:layout_width="269dp"
        android:layout_height="43dp"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameSearch" />

    <ImageButton
        android:id="@+id/nameSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_search"
        app:layout_constraintStart_toEndOf="@+id/nameSearch"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="nameSearch"/>

    <ImageButton
        android:id="@+id/IACOSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="IACOSearch"
        android:src="@drawable/ic_search"
        app:layout_constraintStart_toEndOf="@+id/IACOSearch"
        app:layout_constraintTop_toBottomOf="@+id/nameSearchButton" />

    <TextView
        android:id="@+id/fuckthisshit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>